{
  "$schema": "https://opencode.ai/config.json",
  "model": "zai-coding-plan/glm-4.7",
  "small_model": "zai-coding-plan/glm-4.5-flash",
  "mode": {
    "yolo_mode": {
      "enabled": false,
      "permissions": {
        "edit": "allow",
        "bash": "allow",
        "webfetch": "allow",
        "doom_loop": "allow",
        "external_directory": "ask"
      }
    },
    "question_only": {
      "enabled": false,
      "permissions": {
        "edit": "deny",
        "write": "deny",
        "bash": "deny"
      }
    }
  },
  "lsp": {
    "rust": {
      "command": [
        "/home/uneeb/.cargo/bin/lspmux"
      ],
      "extensions": [
        ".rs"
      ]
    }
  },
  "mcp": {
    "kindly-web-search": {
      "type": "local",
      "command": [
        "uvx",
        "--from",
        "git+https://github.com/Shelpuk-AI-Technology-Consulting/kindly-web-search-mcp-server",
        "kindly-web-search-mcp-server",
        "start-mcp-server"
      ],
      "environment": {
        "TAVILY_API_KEY": "${TAVILY_API_KEY}",
        "GITHUB_TOKEN": "${GITHUB_TOKEN}",
        "KINDLY_TOOL_TOTAL_TIMEOUT_SECONDS": "180",
        "KINDLY_WEB_SEARCH_MAX_CONCURRENCY": "3",
        "KINDLY_DIAGNOSTICS": "1"
      },
      "enabled": true
    }
  },
  "plugin": [
    "@franlol/opencode-md-table-formatter@0.0.3",
    "cc-safety-net",
    "@tarquinen/opencode-dcp@latest",
    "opencode-handoff",
  ],
  "agent": {
    "explore": {
      "disable": true
    },
    "general": {
      "disable": true
    }
  }
}
