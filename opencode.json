{
  "$schema": "https://opencode.ai/config.json",
  "provider": {
    "openrouter": {
      "models": {
        "nvidia/nemotron-3-nano-30b-a3b:free": {
          "name": "Nvidia Nemotron (Free)"
        }
      }
    }
  },
  "mode": {
    "yolo_mode": {
      "enabled": false,
      "permissions": {
        "edit": "allow",
        "bash": "allow",
        "webfetch": "allow",
        "doom_loop": "allow",
        "external_directory": "ask"
      }
    },
    "question_only": {
      "enabled": false,
      "permissions": {
        "edit": "deny",
        "write": "deny",
        "bash": "deny"
      }
    }
  },
  "lsp": {
    "rust": {
      "command": [
        "/home/uneeb/.cargo/bin/lspmux"
      ],
      "extensions": [
        ".rs"
      ]
    }
  },
  "plugin": [
    "oh-my-opencode"
  ]
}
